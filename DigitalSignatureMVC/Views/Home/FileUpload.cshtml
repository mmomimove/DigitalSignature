<html>
<body>
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="FileUpload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Source</p>
                <input type="file" name="pdfdocument" accept="application/pdf"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Certificate</p>
                <input type="file" name="certificate" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Signature</p>
                <input type="file" name="sign" accept="image/png, image/jpeg"/>
            </div>
        </div>
        <div style="line-height: 23px;">
            <text>Page No. : &nbsp;&nbsp;&nbsp;&nbsp;</text>
            <label>
                <input type="text" class="e-input" style="width: 98%" id="ipage" value=""
                       name="ipage">
            </label>
        </div>

        @*DropDownList*@
