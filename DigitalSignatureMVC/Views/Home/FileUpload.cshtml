        <div class="form-group">
            <text>
                Please select position : &nbsp;&nbsp;&nbsp;&nbsp;
            </text>
            <select id="position" name="position">
                <option value="Top Right">Top Right</option>
                <option value="Middle Right">Middle Right</option>
                <option value="Bottom Right">Bottom Right</option>
                <option value="Top Middle">Top Middle</option>
                <option value="Middle">Middle</option>
                <option value="Bottom Middle">Bottom Middle</option>
                <option value="Top Left">Top Left</option>
                <option value="Middle Left">Middle Left</option>
                <option value="Bottom Left">Bottom Left</option>
            </select>
        </div>
        <div class="form-group">
            <text>
                Please select size : &nbsp;&nbsp;&nbsp;&nbsp;
            </text>
            <select id="imagesize" name="imagesize">
                <option value="Large">Large</option>
                <option value="Medium">Medium</option>
                <option value="Small">Small</option>
            </select>
        </div>

        <div style="line-height: 23px;">
            <text>Password</text>
            <label>
                <input type="password" class="e-input" style="width: 102%; margin-left: 105px" id="password" value="" textmode="Password"
                       name="password">
            </label>
        </div>
        <div style="line-height: 23px;">
            <span id="label1">Reason</span>
            <label>
                <input type="text" class="e-input" style="width: 98%; margin-left: 117px" id="Reason" value=""
                       name="Reason">
            </label>
        </div>
        <div style="line-height: 23px;">
            <span id="label1">Contact</span>
            <label>
                <input type="text" class="e-input" style="width: 98%; margin-left: 116px" id="Contact" value=""
                       name="Contact">
            </label>
        </div>
        <div style="line-height: 23px;">
            <span id="label1">Location</span>
            <label>
                <input type="text" class="e-input" style="width: 100%; margin-left: 111px" id="Location" value=""
                       name="Location">
            </label>
        </div>
